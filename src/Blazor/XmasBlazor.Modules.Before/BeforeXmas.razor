@inherits BeforeXmasBase
@page "/before"

@using MudBlazor

<br/>
<MudButton Variant="Variant.Filled" Color="Color.Secondary" EndIcon="@Icons.Material.Filled.Send" OnClick=@SendXmasLetterAsync>Send XMasLetter</MudButton>
<hr />
<MudDataGrid Items="@XmasLetterMessages" Filterable="false" SortMode="@SortMode.None" Groupable="false">
	<Columns>
		<PropertyColumn Property="x => x" />
		<TemplateColumn CellClass="d-flex justify-end">
			<CellTemplate>
				<MudStack Row>
					<MudRating Size="@Size.Small" SelectedValue="5" />
				</MudStack>
			</CellTemplate>
		</TemplateColumn>
	</Columns>
</MudDataGrid>
